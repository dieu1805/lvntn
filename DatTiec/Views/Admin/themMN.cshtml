@model DatTiec.MONNUOC

@{
	ViewBag.Title = "themMN";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm("ThemMN", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card strpied-tabled-with-hover">
						<div class="card-header ">
							<h4 class="card-title">THÊM MÓN NƯỚC</h4>

						</div>
						<div class="card-body table-full-width table-responsive">
							<hr />
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })


							<div class="form-group">
								<a class="control-label"> Tên món nước</a>
								<div class="col-md-10">
									@Html.EditorFor(model => model.TENNUOC, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.TENNUOC, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<a class="control-label"> Giá cả</a>
								<div class="col-md-10">
									@Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<div class="col-md-offset-2 col-md-10">
									<input type="submit" value="Lưu" class="btn btn-default" />
								</div>
							</div>
						</div>
					</div>
				</div>>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Trở về", "showMN")
</div>


