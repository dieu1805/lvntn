@model DatTiec.TRANGMIENG

@{
	ViewBag.Title = "themTM";
	Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>themTM</h2>

@using (Html.BeginForm("ThemTM", "Admin", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
	@Html.AntiForgeryToken()

	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card strpied-tabled-with-hover">
						<div class="card-header ">
							<h4 class="card-title">THÊM TRÁNG MIỆNG</h4>

						</div>
						<div class="card-body table-full-width table-responsive">

							<hr />
							@Html.ValidationSummary(true, "", new { @class = "text-danger" })


							<div class="form-group">
								<a class="control-label"> Tên món tráng miệng</a>
								<div class="col-md-10">
									@Html.EditorFor(model => model.TENTM, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.TENTM, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<a class="control-label"> Giá</a>
								<div class="col-md-10">
									@Html.EditorFor(model => model.GIA, new { htmlAttributes = new { @class = "form-control" } })
									@Html.ValidationMessageFor(model => model.GIA, "", new { @class = "text-danger" })
								</div>
							</div>

							<div class="form-group">
								<div class="col-md-offset-2 col-md-10">
									<input type="submit" value="Lưu" class="btn btn-default" />
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Trở về", "showTM")
</div>
