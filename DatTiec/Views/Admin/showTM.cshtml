@model IEnumerable<DatTiec.TRANGMIENG>

@{
    ViewBag.Title = "showTM";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="card strpied-tabled-with-hover">
					<div class="card-header ">
						<h4 class="card-title">DANH SÁCH TRÁNG MIỆNG</h4>
						<p class="card-category">@Html.ActionLink("Thêm món mới", "ThemTM")</p>

					</div>
					<div class="card-body table-full-width table-responsive">
						<table class="table table-hover table-striped">
							<thead>
							<th>Tên Món</th>
							<th>Giá Cả</th>
							<th></th>
							</thead>

							@foreach (var item in Model)
							{
								<tr>					
									<td>
										@Html.DisplayFor(modelItem => item.TENTM)
									</td>
									<td>
										@Html.DisplayFor(modelItem => item.GIA)
									</td>
									<td>
										
										@Html.ActionLink("Xóa", "XoaTM", new {  id=item.MA_TM })
									</td>
								</tr>
							}

						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
